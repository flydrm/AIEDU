<?xml version="1.0" encoding="utf-8"?>
<!--
  ~ 主题样式定义
  ~ 
  ~ 功能说明：
  ~ 定义应用的视觉主题，包括颜色、字体、动画等
  ~ 
  ~ 设计原则：
  ~ - Material Design 风格
  ~ - 童趣化的视觉元素
  ~ - 柔和的配色方案
  ~ 
  ~ @author AI启蒙时光开发团队
  ~ @date 2025-01-03
  -->
<resources>
    <!-- 基础主题 -->
    <style name="Base.Theme.KidsEdu" parent="Theme.Material3.Light.NoActionBar">
        <!-- 主要颜色 -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        
        <!-- 背景颜色 -->
        <item name="android:windowBackground">@color/background</item>
        
        <!-- 状态栏 -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        
        <!-- 导航栏 -->
        <item name="android:navigationBarColor">@color/bottom_bar_bg</item>
        
        <!-- 文字颜色 -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        
        <!-- 动画时长（适合儿童的慢速动画） -->
        <item name="android:animationDuration">300</item>
    </style>
    
    <!-- 应用主题 -->
    <style name="Theme.KidsEdu" parent="Base.Theme.KidsEdu">
        <!-- 全屏模式（隐藏系统UI） -->
        <item name="android:windowFullscreen">false</item>
        
        <!-- 保持屏幕常亮（学习时不黑屏） -->
        <item name="android:keepScreenOn">true</item>
    </style>
    
    <!-- 启动主题（加快启动速度） -->
    <style name="Theme.KidsEdu.Launcher" parent="Theme.KidsEdu">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>
    
    <!-- 对话框主题 -->
    <style name="Theme.KidsEdu.Dialog" parent="Theme.Material3.Light.Dialog.Alert">
        <item name="colorPrimary">@color/primary</item>
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
        <item name="dialogCornerRadius">@dimen/card_corner_radius</item>
    </style>
    
    <!-- 文字样式 -->
    <style name="TextAppearance.KidsEdu.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextAppearance.KidsEdu.Body" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.KidsEdu.Encouragement">
        <item name="android:textSize">@dimen/encouragement_text_size</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/shadow</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">4</item>
    </style>
    
    <!-- 按钮样式 -->
    <style name="Widget.KidsEdu.Button" parent="Widget.Material3.Button">
        <item name="android:minHeight">@dimen/button_min_size</item>
        <item name="android:minWidth">120dp</item>
        <item name="android:textSize">18sp</item>
        <item name="cornerRadius">24dp</item>
    </style>
    
    <!-- 进度条样式 -->
    <style name="Widget.KidsEdu.ProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/custom_progress_bar</item>
        <item name="android:minHeight">8dp</item>
        <item name="android:maxHeight">8dp</item>
    </style>
</resources>