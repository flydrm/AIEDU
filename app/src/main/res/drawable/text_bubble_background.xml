<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
    <!-- 半透明白色背景 -->
    <solid android:color="#E6FFFFFF" />
    
    <!-- 圆角 -->
    <corners android:radius="12dp" />
    
    <!-- 内边距 -->
    <padding
        android:left="16dp"
        android:top="8dp"
        android:right="16dp"
        android:bottom="8dp" />
    
</shape>